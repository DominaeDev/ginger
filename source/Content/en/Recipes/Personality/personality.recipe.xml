<Ginger id="personality" version="1.1">
	<Name>Add personality</Name>
	<Title>Personality</Title>
	<Author>Ginger</Author>
	<Category>Personality</Category>
	<Flags>personality</Flags>
	<Order>-100</Order>

	<Description>Describe the character's personality and behavior.</Description>
	
	<!-- Parameters -->
	<List id="personality-traits" shared="yes">
		<Label>Personality traits</Label>
		<Description>
			Use adjectives to describe the character's personality.
			e.g. Extrovert, Cheerful, Spontaneous, etc.
		</Description>
	</List>

	<List id="hobbies" shared="yes">
		<Label>Hobbies</Label>
	</List>
	<List id="likes" shared="yes">
		<Label>Likes</Label>
	</List>
	<List id="dislikes" shared="yes">
		<Label>Dislikes</Label>
	</List>
	
	<Text id="more" optional="yes" style="flex">
		<Label>Behavior</Label>
		<Description>
			Describe the character's overall behavior.
		</Description>
	</Text>

	<!-- Output -->	

	<!-- Personality -->
	<Node path="persona/attributes/personality/traits">{personality-traits}</Node>
	
	<Node path="persona/behavior" style="block" order="800" mode="exclude">
		Behavior:   
		{inner}
	</Node>
	<Node path="persona/behavior/value" rule="more">{more}</Node>	

	<!-- Hobbies -->
	<Attribute>
		<Name>Hobbies</Name>
		<Value>{hobbies}</Value>
	</Attribute>

	<!-- Likes -->
	<Node path="persona/attributes/likes/traits">{likes}</Node>
	
	<!-- Dislikes-->
	<Node path="persona/attributes/dislikes/traits">{dislikes}</Node>

</Ginger>