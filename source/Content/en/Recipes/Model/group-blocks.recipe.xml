<Ginger id="group-components" version="1.0">
	<!-- Preamble -->
	<Name>Modifiers/Group components</Name>
	<Title>Group components</Title>
	<Author>Ginger</Author>
	<Category>Modifier</Category>
	<Description>
		Wraps each output component with a distinct beginning and end.
	</Description>
	
	<Node path="system" style="paragraph">
		&lt;INSTRUCTIONS&gt;[br]
		[inner][br]
		&lt;/INSTRUCTIONS&gt;[br]
	</Node>

	<Node path="persona" style="paragraph">
		&lt;[char] PROFILE&gt;[br]
		[inner][br]
		&lt;/[char] PROFILE&gt;[br]
	</Node>
	
	<Node path="user" style="paragraph">
		&lt;[user] PROFILE&gt;[br]
		[inner][br]
		&lt;/[user] PROFILE&gt;[br]
	</Node>	
	
	<Node path="scenario" style="paragraph">
		&lt;SCENARIO&gt;[br]
		[inner][br]
		&lt;/SCENARIO&gt;[br]
	</Node>
	
	<Node path="example/top" order="0">
		[__backyard?&lt;CHAT EXAMPLE&gt;[br]]
	</Node>

	<Node path="example/bottom" order="-0">
		[__backyard?&lt;/CHAT EXAMPLE&gt;]
		
		BEGIN CHAT[br]
	</Node>
</Ginger>

