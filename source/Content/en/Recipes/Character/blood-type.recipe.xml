<Ginger id="blood-type" version="1.1">
	<!-- Preamble -->
	<Name>Attribute/Blood type</Name>
	<Title>Blood type</Title>
	<Author>Ginger</Author>
	<Category>Body</Category>
	<Description>Assign a blood type.</Description>
	
	<!-- Parameters -->
	<Choice id="blood-type" style="radio" shared="yes" required="yes">
		<Label>Blood type</Label>
		<Option>A</Option>
		<Option>B</Option>
		<Option>AB</Option>
		<Option>O</Option>
	</Choice>
	
	<!-- Output -->
	<Attribute id="blood-type:local">
		<Name>Blood type</Name>
		<Value>{blood-type}</Value>
	</Attribute>
</Ginger>