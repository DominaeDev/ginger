<Ginger id="user-nickname" version="1.0">
	<Name>User/Nickname</Name>
	<Title>Nickname for user</Title>
	<Description>Specify a nickname to use for User.</Description>
	<Author>Ginger</Author>
	<Category>User</Category>
	
	<!-- Parameters -->
	<Text id="user-nickname" shared="yes">
		<Label>Nickname</Label>
		<Placeholder>Enter a nickname for user...</Placeholder>
	</Text>
	
	<!-- Output -->
	<Persona rule="user-nickname">
		[char] calls [user] by [#their] nickname "{user-nickname}".
	</Persona>
	
	<Node path="user/attributes/nickname" rule="user-nickname:local">Nickname: "{user-nickname}"</Node>

</Ginger>